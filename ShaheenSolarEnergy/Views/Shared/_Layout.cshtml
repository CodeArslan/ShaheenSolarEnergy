            </div>
            <div class="sidebar-overlay"></div>
        </div>
        <!-- =============== Left side End ================-->
        <div class="main-content-wrap sidenav-open d-flex flex-column">
            <!-- ============ Body content start ============= -->
            <div class="main-content">
                @RenderBody()
                <!-- end of main-content -->
            </div>
            <!-- Footer Start -->
            <div class="flex-grow-1"></div>
            <div class="app-footer text-light">
                <div class="container">
                    <div class="row">
                        <div class="col-md-12">
                            <h5>About Cactus General Transport</h5>
                            <p class="text-muted">
                                We are committed to providing efficient transport solutions
                                with a focus on reliability and customer satisfaction.
                                Everyday is a new day for us and we work really hard to satisfy our customer. Cactus General Transport is leading the way when it comes to providing quality heavy equipment rental.
                            </p>
                        </div>
                    </div>

                    <div class="row mt-4">
                        <div class="col-md-12 text-center">
                            <p class="text-25 text-primary">A Project by GIMS Student</p>
                        </div>
                    </div>
                    <div class="row mt-4">
                        <div class="col-md-12 text-center">
                            <ul class="list-inline social-icons">
                                <li class="list-inline-item"><a href="#" target="_blank"><i class="fab fa-facebook-f"></i></a></li>
                                <li class="list-inline-item"><a href="#" target="_blank"><i class="fab fa-twitter"></i></a></li>
                                <li class="list-inline-item"><a href="#" target="_blank"><i class="fab fa-linkedin-in"></i></a></li>
                                <li class="list-inline-item"><a href="#" target="_blank"><i class="fab fa-instagram"></i></a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="~/dist-assets/js/plugins/jquery-3.3.1.min.js"></script>
    <script src="~/dist-assets/js/scripts/dashboard.v1.script.min.js"></script>
    <script src="~/dist-assets/js/plugins/bootstrap.bundle.min.js"></script>
    <script src="~/dist-assets/js/plugins/perfect-scrollbar.min.js"></script>
    <script src="~/Scripts/customScript.min.js"></script>
    <script src="~/dist-assets/js/plugins/echarts.min.js"></script>
    <script src="~/dist-assets/js/scripts/echart.options.min.js"></script>
    <script src="~/dist-assets/js/scripts/customizer.script.min.js"></script>
    <script src="~/dist-assets/js/plugins/toastr.min.js"></script>
    <script src="~/dist-assets/js/plugins/datatables.min.js"></script>
    <script src="~/dist-assets/js/scripts/datatables.script.min.js"></script>
    <script src="~/dist-assets/js/scripts/echarts.script.min.js"></script>
    <script src="~/dist-assets/js/scripts/jquery.validate.js"></script>
    <script src="~/Scripts/bootbox.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/moment.js"></script>
    <script src="~/Scripts/custom-sidebar.large.script.js"></script>
    <script src="~/Scripts/custom-sidebar.js"></script>
    @*<script src="~/Scripts/inputmask/jquery.inputmask.min.js"></script>*@
    @Scripts.Render("~/bundles/jqueryval")
    @RenderSection("scripts", required: false)
</body>
</html>

<script>
    function hideAlerts() {
        $('#successAlert, #errorAlert').fadeOut(2000, function () {
            $(this).hide();
        });
    }
    function showSpinner() {
        $('.spinner-container').show();
    }
    function hideSpinner() {
        $('.spinner-container').fadeOut();
    }
    var excludedUrls = ['/supplier/issuppliernameavailable', '/quotation/getproductbyid', '/order/filteredorders'];

    $.ajaxSetup({
        beforeSend: function (xhr, settings) {
            var baseUrl = settings.url.split('?')[0].toLowerCase();
            if (excludedUrls.includes(baseUrl)) {
                return;
            } else {
                showSpinner();
            }
        },
        complete: function () {
            hideSpinner();
        }
    });

    $(document).ready(function () {
        $(".no-open").hover(function () {
            $(".sidebar-left-secondary").removeClass("open");
        });
    });

</script>