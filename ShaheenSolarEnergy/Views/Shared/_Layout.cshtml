        <div class="spinner-bubble spinner-bubble-gray-300"></div>
    </div>
    <div class="app-admin-wrap layout-sidebar-large">
        <div class="main-header">
            <div class="logo">
                <img src="~/dist-assets/images/ams-logo.png" style="height:65px; width:65px;" />
            </div>
            <div class="menu-toggle">
                <div></div>
                <div></div>
                <div></div>
            </div>
            <div class="d-flex align-items-center">

            </div>
            <div style="margin: auto"></div>
            <div class="header-part-right">
                <!-- Full screen toggle -->
                <i class="fa fa-expand header-icon d-none d-sm-inline-block"
                   data-fullscreen></i>
            </div>
        </div>
        <div class="side-content-wrap">
            <div class="sidebar-left open rtl-ps-none"
                 data-perfect-scrollbar=""
                 data-suppress-scroll-x="true">
                <ul class="navigation-left">
                    <li class="nav-item no-open" data-item="">
                        <a class="nav-item-hold" href="/Home/Dashboard">
                            <i class="fa fa-chart-bar fa-lg"></i><span class="nav-text">Dashboard</span>
                        </a>
                    </li>
                    <li class="nav-item" data-item="manage">
                        <a class="nav-item-hold" href="#">
                            <i class="fa fa-sliders-h fa-lg"></i><span class="nav-text">Manage</span>
                        </a>
                        <div class="triangle"></div>
                    </li>
                    <li class="nav-item no-open" data-item="">
                        <a class="nav-item-hold" href="/Order/Index">
