                </ul>
            </div>
            <div class="sidebar-left-secondary rtl-ps-none" data-perfect-scrollbar="" data-suppress-scroll-x="true">
                <!-- Submenu Dashboards-->
                <ul class="childNav" data-parent="manage">
                    <li class="nav-item">
                        <a href="/Supplier/Index">
                            <i class="fas fa-truck"></i><span class="item-name" style="margin-left:15px;font-size:15px;">Suppliers</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="/Products/Index">
                            <i class="fas fa-truck"></i><span class="item-name" style="margin-left:15px;font-size:15px;">Products</span>
                        </a>
                    </li>

                </ul>
                <ul class="childNav" data-parent="attendance">
                    <li class="nav-item">
                        <a href="/Attendance/Index">
                            <i class="fa fa-table"></i><span class="item-name" style="margin-left:15px;font-size:15px;">View Attendance</span>
                        </a>
                    </li>
                    <li class="nav-item dropdown-sidemenu">
                        <a>
                            <i class="fa fa-calendar"></i><span class="item-name" style="margin-left:15px;font-size:15px;">Add Attendance</span><i class="dd-arrow fa fa-chevron-down"></i>
                        </a>
                        <ul class="submenu">
                            <li><a href="/Attendance/AddAttendanceForCardHolders">For Card Holders</a></li>
                            <li><a href="/Attendance/AddAttendanceForLabours">For Labours</a></li>
                        </ul>
                    </li>
